{
  "name": "techbook-api",
  "version": "1.0.0",
  "description": "API para integração com Azure MySQL - site TechBook",
  "main": "api-azure.js",
  "scripts": {
    "start": "node api-azure.js",
    "start-local": "node api-exemplo.js",
    "dev": "nodemon api-azure.js",
    "dev-local": "nodemon api-exemplo.js",
    "test": "node -e \"require('./database-config').testarConexao().then(ok => process.exit(ok ? 0 : 1))\"",
    "setup-db": "echo 'Execute: mysql -h marketingdbfabioi2.mysql.database.azure.com -P 3389 -u azureuser -p --ssl-mode=REQUIRED < database.sql'"
  },
  "keywords": [
    "api",
    "techbook",
    "notebooks",
    "express",
    "azure",
    "mysql"
  ],
  "author": "TechBook Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "mysql2": "^3.6.0"
  },
  "optionalDependencies": {
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
